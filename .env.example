# Configuración de la aplicación DreamHorses
APP_NAME="DreamHorses"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://127.0.0.1:8000

# Configuración de logs
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Configuración de base de datos MySQL
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=dreamhorses
DB_USERNAME=dreamhorses_user
DB_PASSWORD=your_secure_password_here

# Configuración de broadcast
BROADCAST_DRIVER=log

# Configuración de cache y sesiones (usando file driver por defecto)
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Configuración de correo electrónico
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@dreamhorses.com"
MAIL_FROM_NAME="${APP_NAME}"

# Configuración de Vite
VITE_APP_NAME="${APP_NAME}"

# Configuración específica de N8N para automatización
N8N_WEBHOOK_URL=http://n8n:5678
N8N_API_KEY=your_n8n_api_key_here
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_n8n_password

# Configuración de automatización DreamHorses
DREAMHORSES_AUTO_NOTIFICATIONS=true
DREAMHORSES_VACCINATION_REMINDER_DAYS=30
DREAMHORSES_CHECKUP_REMINDER_MONTHS=6
DREAMHORSES_DOCUMENT_RENEWAL_DAYS=30

# Webhooks específicos de N8N para DreamHorses
N8N_WEBHOOK_NEW_HORSE=new-horse
N8N_WEBHOOK_HORSE_UPDATED=horse-updated
N8N_WEBHOOK_VACCINATION_REMINDER=vaccination-reminder
N8N_WEBHOOK_EVENT_NOTIFICATION=event-notification
N8N_WEBHOOK_SYSTEM_ALERT=system-alert
N8N_WEBHOOK_GENERATE_REPORT=generate-report

# Configuración de notificaciones por email
NOTIFICATION_OWNER_EMAIL=true
NOTIFICATION_VETERINARIAN_EMAIL=true
NOTIFICATION_TRAINER_EMAIL=true
NOTIFICATION_ADMIN_EMAIL=admin@dreamhorses.com

# Configuración de reportes automáticos
AUTO_REPORTS_ENABLED=true
AUTO_REPORTS_FREQUENCY=weekly
AUTO_REPORTS_EMAIL=reports@dreamhorses.com

# Timezone para Argentina
APP_TIMEZONE=America/Argentina/Buenos_Aires